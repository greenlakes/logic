<h1>Play</h1>
<table class = 'table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Published</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| if quiz.published? %>
      <tr>
        <td><%= quiz.title %></td>
        <td><%= quiz.category.name %></td>
        <td><%= quiz.published %></td>
        <td><%= link_to 'Play', play_path(quiz), class: 'btn btn-success btn-block' %></td>
        
      </tr>
    <% end %>
    <% end %>
     
  </tbody>
</table>